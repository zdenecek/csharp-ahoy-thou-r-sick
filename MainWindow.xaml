<Window x:Class="AhoCorasick.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AhoCorasick"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- ListBox takes remaining vertical space -->
            <RowDefinition Height="Auto" />
            <!-- Label takes minimum required vertical space -->
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" ScrollViewer.VerticalScrollBarVisibility="Auto" x:Name="FileList" />

        <Label x:Name="StatusBar" Content="Label" Grid.Row="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="780"/>
    </Grid>
</Window>
